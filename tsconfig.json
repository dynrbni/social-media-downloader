{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "ES2022",

    "module": "CommonJS",
    "moduleResolution": "Node",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["**/*.ts"]
}
